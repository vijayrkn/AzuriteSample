@page
@model AzuriteSample.Pages.Workflows.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Workflow[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workflow[0].AssignedTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workflow[0].FileSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workflow[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workflow[0].Reviewed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Workflow) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileSize) Bytes
            </td>
            <td>
                @Html.TextAreaFor(modelItem => item.Notes, 3, 50, new {@readonly = "readonly", @style="border:0;"})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviewed)
            </td>
            <td>
                <a asp-page-handler="DownloadFile" asp-route-id="@item.Id">Download</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
