@page
@model AzuriteSample.Pages.Workflows.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Workflow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Workflow.Id" />
            <input type="hidden" asp-for="Workflow.FileSize"/>
            <div class="form-group">
                <label asp-for="Workflow.FileName" class="control-label"></label>
                <input asp-for="Workflow.FileName" class="form-control" />
                <span asp-validation-for="Workflow.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workflow.AssignedTo" class="control-label"></label>
                <input asp-for="Workflow.AssignedTo" class="form-control" />
                <span asp-validation-for="Workflow.AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workflow.Notes" class="control-label"></label>
                <textarea asp-for="Workflow.Notes" rows="3" cols="50" class="form-control"></textarea>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Workflow.Reviewed" /> @Html.DisplayNameFor(model => model.Workflow.Reviewed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
